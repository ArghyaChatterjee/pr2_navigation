
<launch>
<node pkg="semantic_point_annotator" type="sac_inc_ground_removal_node" name="sac_ground_removal_footprint_large" machine="c2" >
  <remap from="tilt_laser_cloud_filtered" to="tilt_scan_footprint_large" />
  <remap from="cloud_ground_filtered" to="ground_object_cloud_footprint_large" />
  <param name="z_threshold" value="0.15" />
  <param name="sac_min_points_per_model" value="40" />
  <param name="sac_distance_threshold" value="0.10" />
  <param name="planar_refine" value="1" />
</node>

<node pkg="semantic_point_annotator" type="sac_inc_ground_removal_node" name="sac_ground_removal_footprint_small" machine="c2" >
  <remap from="tilt_laser_cloud_filtered" to="tilt_scan_footprint_small" />
  <remap from="cloud_ground_filtered" to="ground_object_cloud_footprint_small" />
  <param name="z_threshold" value="0.15" />
  <param name="sac_min_points_per_model" value="40" />
  <param name="sac_distance_threshold" value="0.10" />
  <param name="planar_refine" value="1" />
</node>
</launch>

